<?xml version='1.0' encoding='utf-8'?>
<widget id="com.project.petyourplant" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Pet Your Plant</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="jahn2488@conestogac.on.ca" href="http://conestogac.on.ca">
        Jaden Ahn + Aubrey Delong
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <icon src="icon.png" />
    <splash src="splash.png" />
    <plugin name="cordova-plugin-camera" spec="^4.0.3" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <engine name="android" spec="^7.0.0" />
</widget>
